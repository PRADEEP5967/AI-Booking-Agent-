# AI Booking Agent Environment Configuration
# Copy this file to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Google Calendar Configuration
# Download credentials from Google Cloud Console
GOOGLE_CALENDAR_CREDENTIALS_FILE=credentials/google_credentials.json
GOOGLE_CALENDAR_TOKEN_FILE=token.json
CALENDAR_ID=primary

# AI/LLM API Keys
# Get from OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Get from Anthropic: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration (optional)
# SQLite for development, PostgreSQL for production
DATABASE_URL=sqlite:///./bookings.db

# Redis Configuration (optional)
# For session storage and caching
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501 