# Railway Deployment Environment Variables
# Set these in your Railway project dashboard

# Railway automatically sets PORT - no need to set it manually

# API Configuration
API_HOST=0.0.0.0
API_RELOAD=false

# Frontend Configuration (if deploying frontend separately)
BOOKING_AGENT_API_URL=https://your-railway-app-url.railway.app
BOOKING_AGENT_API_TIMEOUT=30

# Google Calendar Configuration
GOOGLE_CALENDAR_CREDENTIALS_FILE=credentials/google_credentials.json
GOOGLE_CALENDAR_TOKEN_FILE=token.json
CALENDAR_ID=primary
USE_MOCK_CALENDAR=true

# AI/LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_MODEL=gpt-3.5-turbo

# Database Configuration (Optional)
DATABASE_URL=sqlite:///./booking_agent.db

# Redis Configuration (Railway provides Redis addon)
REDIS_URL=redis://your-redis-url:6379

# CORS Configuration - Add your Railway frontend URL
CORS_ORIGINS=https://your-frontend-app.railway.app,http://localhost:8501,http://127.0.0.1:8501

# Logging Configuration
LOG_LEVEL=INFO

# Session Configuration
SESSION_TIMEOUT_HOURS=24
MAX_SESSIONS_PER_USER=5 